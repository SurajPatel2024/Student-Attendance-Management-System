<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="google-adsense-account" content="ca-pub-4740018176656756">
  <title>Total Students</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f7fb;
    color: #333;
}

main {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    width: 100vw;
}

/* Students Section */
.students-section {
    background-color: #ffffff;
    padding: 30px 40px;
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    width: 90%;
    max-width: 800px;
    text-align: center;
}

.students-section h2 {
    margin-bottom: 20px;
    color: #2e7d32;
}

/* Table Styles */
.students-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 16px;
}

.students-table th, 
.students-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
}

.students-table th {
    background-color: #4CAF50;
    color: white;
    font-weight: bold;
}

.students-table tr:nth-child(even) {
    background-color: #f9f9f9;
}

.students-table tr:hover {
    background-color: #f1f1f1;
}

.students-table td {
    color: #555;
}

/* No Data Message */
.no-data {
    font-size: 18px;
    color: #f44336;
    margin-top: 20px;
}
.delete-btn {
    background-color: #e74c3c; /* Red button */
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button.delete-btn:hover {
    background-color: #c0392b; /* Darker red on hover */
}

/* Responsive Design */
@media (max-width: 768px) {
    .students-section {
        padding: 20px;
    }

    .students-table th,
    .students-table td {
        padding: 10px;
        font-size: 14px;
    }
}

  </style>
</head>

<body>
  <%- include('partials/nav') %>

  <main>
    <section class="students-section">
      <h2>Total Students</h2>
      <% if (data.length > 0) { %>
        <table class="students-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Roll</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((item) => { %>
              <tr>
                <td><%= item.sname %></td>
                <td><%= item.roll %></td>
                <td>
                  <button 
                    class="delete-btn" 
                    data-id="<%= item._id %>" 
                    onclick="deleteStudent('<%= item._id %>')">
                    Delete
                  </button>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="no-data">No Data Available</p>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
<script>
  async function deleteStudent(studentId) {
    const confirmation = confirm('Are you sure you want to delete this student?');
    if (!confirmation) return;

    try {
      const response = await fetch(`/delete-student/${studentId}`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
      });

      if (response.ok) {
        alert('Student deleted successfully');
        document.querySelector(`button[data-id="${studentId}"]`).closest('tr').remove();
      } else {
        const result = await response.json();
        alert(`Error: ${result.message}`);
      }
    } catch (error) {
      console.error('Error deleting student:', error);
      alert('An error occurred while deleting the student.');
    }
  }
</script>

</html>
